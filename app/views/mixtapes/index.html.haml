= content_for :meta do
  %meta{:content => "Mixtape - Collective Playlists", :property => "og:title"}/
  %meta{:content => "Enjoy your friends' combined Top Tracks Mixtape as a Spotify playlist.", :property => "og:description"}/


.container
  .row
    .col-md-7
      %h1 Mixtapes
      .panel.panel-default
        .panel-heading
          %h3.panel-title Your mixtapes
        .panel-body
          -# = link_to 'Create Mixtape', new_mixtape_path, class: 'btn btn-accent', title: 'Create new mixtape'
          = render 'form'
        .list-group
          = render @owned_mixtapes
      - if @mixtapes.any?
        .panel.panel-default
          .panel-heading
            %h3.panel-title Mixtapes you've contributed to
          .panel-body
          .list-group
            = render @mixtapes
    .col-md-5
      .card.hovercard
        .cardheader
          = current_user.name
        .avatar
          = image_tag current_user.avatar_url, alt: current_user.name
        .info
          .title
          .desc
            %span.label.label-primary= @owned_mixtapes.count
            mixtapes created
          .desc
            %span.label.label-primary= @mixtapes.count
            contributions
